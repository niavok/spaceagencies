<?xml version="1.0" encoding="utf-8"?>
<resources>
    
    <style name="bigButton" parent="buttonBase@styles">
        <item name="i3d:font">bigButton@fonts</item>
        <item name="i3d:layout_width">wrap_content</item>
        <item name="i3d:layout_height">wrap_content</item>
        <item name="i3d:layout_paddingLeft">30px</item>
        <item name="i3d:layout_paddingRight">30px</item>
        <item name="i3d:layout_paddingTop">10px</item>
        <item name="i3d:layout_paddingBottom">10px</item>
    </style>
    
    <style name="smallButton" parent="buttonBase@styles">
        <item name="i3d:font">smallButton@fonts</item>
        <item name="i3d:borderSize">0.5px</item>
        <item name="i3d:layout_width">wrap_content</item>
        <item name="i3d:layout_height">wrap_content</item>
        <item name="i3d:layout_paddingLeft">0px</item>
        <item name="i3d:layout_paddingRight">0px</item>
        <item name="i3d:layout_paddingTop">1px</item>
        <item name="i3d:layout_paddingBottom">1px</item>
        <item name="i3d:cornerLeftTopSize">8px</item>
        <item name="i3d:cornerRightBottomStyle">bevel</item>
        <item name="i3d:cornerRightBottomSize">8px</item>
    </style>

    <style name="buttonBase">
        <item name="i3d:gravity">center</item>
        <item name="i3d:borderSize">1px</item>
        <item name="i3d:borderColor">borderButtonBase@color</item>
        <item name="i3d:cornerLeftTopStyle">bevel</item>
        <item name="i3d:cornerLeftTopSize">10px</item>
        <item name="i3d:cornerRightBottomStyle">bevel</item>
        <item name="i3d:cornerRightBottomSize">10px</item>
        <item name="i3d:background">buttonBaseBackground@backgrounds</item>
        <item state="over" name="i3d:background">buttonBaseBackground-over@backgrounds</item>
        <item state="selected" name="i3d:borderSize">0px</item>
        <item state="selected" name="i3d:background">buttonSelectedBackground@backgrounds</item>
        <item state="selected" name="i3d:color">white@color</item>
        <item state="disabled" name="i3d:background">buttonBaseBackground-disabled@backgrounds</item>
        <item state="disabled" name="i3d:borderColor">borderButtonBase-disabled@color</item>
        <item state="disabled" name="i3d:color">disabledDarkText@color</item>
        
    </style>
    

    
    
    <style name="lightBlock">
        <item name="i3d:borderSize">0px</item>
        <item name="i3d:cornerLeftTopStyle">bevel</item>
        <item name="i3d:cornerLeftTopSize">10px</item>
        <item name="i3d:cornerRightBottomStyle">bevel</item>
        <item name="i3d:cornerRightBottomSize">10px</item>
        <item name="i3d:layout_paddingLeft">25px</item>
        <item name="i3d:layout_paddingRight">25px</item>
        <item name="i3d:layout_paddingTop">15px</item>
        <item name="i3d:layout_paddingBottom">15px</item>
        <item name="i3d:background">lightBlock@backgrounds</item>
        <item state="selected" name="i3d:borderSize">3px</item>
        <item state="selected" name="i3d:borderColor">selection@color</item>
        
    </style>
    
    
    <style name="lightBlock-selectable" parent="lightBlock@styles">
    <item state="over" name="i3d:borderSize">1px</item>
        <item state="over" name="i3d:borderColor">borderButtonBase@color</item>
    </style>

	<style name="blackBlock">
        <item name="i3d:borderSize">0px</item>
        <item name="i3d:cornerLeftTopStyle">bevel</item>
        <item name="i3d:cornerLeftTopSize">10px</item>
        <item name="i3d:cornerRightBottomStyle">bevel</item>
        <item name="i3d:cornerRightBottomSize">10px</item>
        <item name="i3d:layout_paddingLeft">25px</item>
        <item name="i3d:layout_paddingRight">25px</item>
        <item name="i3d:layout_paddingTop">15px</item>
        <item name="i3d:layout_paddingBottom">5px</item>
        <item name="i3d:background">blackBlock@backgrounds</item>
    </style>

    
    <style name="debugRed">
        <item name="i3d:borderSize">5px</item>
        <item name="i3d:borderColor">debugRed@color</item>
    </style>
    
    <style name="debugGreen">
        <item name="i3d:borderSize">5px</item>
        <item name="i3d:borderColor">debugGreen@color</item>
    </style>
    
    <style name="debugBlue">
        <item name="i3d:borderSize">5px</item>
        <item name="i3d:borderColor">debugBlue@color</item>
    </style>
    
</resources>